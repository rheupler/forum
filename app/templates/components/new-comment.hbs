{{yield}}


<div class='row'>
  <h1>Add a comment</h1>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      <br>
      {{input value=name id="name"}}
      <br>
      <label for="content">Comment</label>
      <br>
      {{textarea value=content id="content" rows="6" cols="30"}}
    </div>
    <button class='btn btn-success' {{action 'saveComment'}}>Save</button>
  </form>
</div>
